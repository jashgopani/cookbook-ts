<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= recipe.title %></h5>
    <%- include('../partials/button-group', {
      backUrl: '/recipes',
      editUrl: `/recipes/${recipe.id}/edit`,
      deleteUrl: `/recipes/${recipe.id}?_method=DELETE`,
      entityName: 'recipe',
      entityId: recipe.id
    }) %>
  </div>
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted">Category: <%= recipe.category ? recipe.category.name : 'None' %></h6>
    <p class="card-text"><%= recipe.description %></p>
    <hr>
    <h6>Instructions:</h6>
    <p class="card-text"><%= recipe.instructions %></p>
  </div>
  <div class="card-footer text-muted">
    Created: <%= recipe.createdAt.toLocaleDateString() %> | Updated: <%= recipe.updatedAt.toLocaleDateString() %>
  </div>
</div>
