<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Recipes</h1>
  <a href="/recipes/new" class="btn btn-primary">New Recipe</a>
</div>

<% if (recipes.length === 0) { %>
  <div class="alert alert-info">No recipes found. Create one!</div>
<% } else { %>
  <div class="list-group">
    <% recipes.forEach(recipe => { %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1"><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h5>
          <small class="text-muted">Category: <%= recipe.category ? recipe.category.name : 'None' %></small>
        </div>
        <%- include('../partials/button-group', {
          backUrl: '/',
          editUrl: `/recipes/${recipe.id}/edit`,
          deleteUrl: `/recipes/${recipe.id}?_method=DELETE`,
          entityName: 'recipe',
          entityId: recipe.id
        }) %>
      </div>
    <% }); %>
  </div>
<% } %>
