<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Edit Recipe</h5>
  </div>
  <div class="card-body">
    <form action="/recipes/<%= recipe.id %>?_method=PUT" method="POST">
      <%- include('../partials/recipe-form', { 
        recipe: recipe, 
        categories: categories, 
        errors: errors || {}, 
        cancelUrl: `/recipes/${recipe.id}` 
      }) %>
    </form>
  </div>
</div>
