<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Categories</h1>
  <a href="/categories/new" class="btn btn-primary">New Category</a>
</div>

<% if (categories.length === 0) { %>
  <div class="alert alert-info">No categories found. Create one!</div>
<% } else { %>
  <div class="list-group">
    <% categories.forEach(category => { %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-1"><a href="/categories/<%= category.id %>"><%= category.name %></a></h5>
          <small class="text-muted">Recipes: <%= category.recipes ? category.recipes.length : 0 %></small>
        </div>
        <%- include('../partials/button-group', {
          backUrl: '/',
          editUrl: `/categories/${category.id}/edit`,
          deleteUrl: `/categories/${category.id}?_method=DELETE`,
          entityName: 'category',
          entityId: category.id
        }) %>
      </div>
    <% }); %>
  </div>
<% } %>
