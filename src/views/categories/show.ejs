<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= category.name %></h5>
    <%- include('../partials/button-group', {
      backUrl: '/categories',
      editUrl: `/categories/${category.id}/edit`,
      deleteUrl: `/categories/${category.id}?_method=DELETE`,
      entityName: 'category',
      entityId: category.id
    }) %>
  </div>
  <div class="card-body">
    <h6>Recipes in this category:</h6>
    <% if (category.recipes && category.recipes.length > 0) { %>
      <ul class="list-group">
        <% category.recipes.forEach(recipe => { %>
          <li class="list-group-item">
            <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a>
          </li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No recipes in this category.</p>
    <% } %>
  </div>
  <div class="card-footer text-muted">
    Created: <%= category.createdAt.toLocaleDateString() %> | Updated: <%= category.updatedAt.toLocaleDateString() %>
  </div>
</div>
